<h1>All Posts</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Id</th>
  </tr>
 
  <% @posts.each do |p| %>
    <tr>
      <td><%= p.title %></td>
      <td><%= p.text %></td>
      <td><%= p.user_id %></td>
      <td><%= link_to 'Show', post_path(p) %></td>
      <td><%= link_to 'Edit', edit_post_path(p) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', root_path %>