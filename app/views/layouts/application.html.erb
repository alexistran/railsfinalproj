<!DOCTYPE html>
<html>
<head>
  <title>SafeSpace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Nunito:400,700,300' rel='stylesheet' type='text/css'>
</head>
<body>


<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>

  <% end %>



<div id="header">

  <% if user_signed_in? %>
    <div id="profile-text"> Hi <strong><%= current_user.name %></strong>! </div>
    <div class="round-image-50"><%= image_tag current_user.avatar.url(:thumb) %> </div>
    <%= link_to image_tag("logo.png", :class => 'logo'), root_path %> 
    <%= link_to 'edit profile', edit_user_registration_path, :class => 'navbar-link', :id => 'edit-profile' %> 
    <%= link_to "my posts", user_path(current_user), :class => 'navbar-link', :id => 'my-posts' %>
    <%= link_to "log out", destroy_user_session_path, method: :delete, :class => 'navbar-link', :id => 'log-out' %>
   
  <% else %>
    <%= link_to image_tag("logo.png", :class => 'logo'), root_path %> 
    <%= link_to "sign up", new_user_registration_path, :class => 'navbar-link', :id => 'sign-up'  %> 
    <%= link_to "log in", new_user_session_path, :class => 'navbar-link', :id => 'log-in' %>

  <% end %>

</div>



<%= yield %>

</body>
</html>
